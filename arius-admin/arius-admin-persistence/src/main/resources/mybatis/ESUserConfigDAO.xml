<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didichuxing.datachannel.arius.admin.persistence.mysql.app.ESUserConfigDAO">
    <resultMap id="BaseResultMap" type="com.didichuxing.datachannel.arius.admin.common.bean.po.app.ESUserConfigPO">
        <result column="id" jdbcType="INTEGER" property="esUser"/>
        <result column="dsl_analyze_enable" jdbcType="INTEGER" property="dslAnalyzeEnable"/>
        <result column="aggr_analyze_enable" jdbcType="INTEGER" property="aggrAnalyzeEnable"/>
        <result column="is_source_separated" jdbcType="TINYINT" property="isSourceSeparated"/>
        <result column="analyze_response_enable" jdbcType="TINYINT" property="analyzeResponseEnable"/>
    </resultMap>

    <sql id="Base_Column_List">
       id, dsl_analyze_enable, aggr_analyze_enable, is_source_separated, analyze_response_enable, create_time, update_time
    </sql>

    <select id="getByESUser" parameterType="integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from arius_es_user
        where id = #{esUser}
    </select>

    <select id="listAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from arius_es_user
    </select>


    <insert id="insert" parameterType="com.didichuxing.datachannel.arius.admin.common.bean.po.app.ESUserConfigPO"
            useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into arius_es_user
        (id, dsl_analyze_enable, aggr_analyze_enable, is_source_separated, analyze_response_enable)
        values
        (#{esUser}, #{dslAnalyzeEnable}, #{aggrAnalyzeEnable}, #{isSourceSeparated}, #{aggrAnalyzeEnable})
    </insert>

    <update id="update" parameterType="com.didichuxing.datachannel.arius.admin.common.bean.po.app.ESUserConfigPO">
        update arius_es_user
        <trim prefix="set" prefixOverrides=",">
            <if test="dslAnalyzeEnable != null">,dsl_analyze_enable = #{dslAnalyzeEnable}</if>
            <if test="aggrAnalyzeEnable != null">,aggr_analyze_enable = #{aggrAnalyzeEnable}</if>
            <if test="isSourceSeparated != null">,is_source_separated = #{isSourceSeparated}</if>
            <if test="analyzeResponseEnable != null">,analyze_response_enable = #{analyzeResponseEnable}</if>
        </trim>
        where id = #{esUser} and is_active = 1
    </update>

</mapper>